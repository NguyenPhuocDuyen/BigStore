@page "/admin/add-role-claim/{roleid}"
@model AddRoleClaim
@{
    ViewData["Title"] = "Gán đặc tính cho role";
}

<h4>@ViewData["Title"]: @Model.Role.Name</h4>
<partial name="_StatusMessage" model="@Model.StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Input.ClaimType"></label>
                <input asp-for="Input.ClaimType" class="form-control">
                <span asp-validation-for="Input.ClaimType" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Input.ClaimValue"></label>
                <input asp-for="Input.ClaimValue" class="form-control">
                <span asp-validation-for="Input.ClaimValue" class="text-danger"></span>
            </div>

            <input value="Tạo mới" type="submit" class="btn btn-primary"/>
                
            <a class="btn btn-primary" asp-page="./Create" asp-route-roleid="@Model.Role.Id">Chỉnh sửa role</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
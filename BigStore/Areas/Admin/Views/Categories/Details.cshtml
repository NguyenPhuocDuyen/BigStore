@model BigStore.BusinessObject.Category

@{
    ViewData["Title"] = Model.Title;
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.Description)
        </dd>
        <dt class="col-sm-2">
            Đã xoá
        </dt>
        <dd class="col-sm-10">
            @Model.IsDeleted
        </dd>
        <dt class ="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10 preview">
            <img src="@Model.ImageUrl" alt="anh"/>
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.Id">Chỉnh sửa</a>
    <a class="btn btn-primary" asp-action="Index">Danh sách danh mục</a>
</div>
